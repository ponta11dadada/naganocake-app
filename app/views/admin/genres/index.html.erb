<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h2>ジャンル一覧・追加</h2>
				<%= form_with model:@new_genre, url:admin_genres_path, local:true do |f| %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<%= f.radio_button :is_valid, :true, checked: true %>
				<%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
				<%= f.radio_button :is_valid, :false %>
				<%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %>
				<%= f.submit "追加", class:"btn btn-primary" %>
				<% end %>

				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>ジャンル</th>
							<th>状態</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @all_genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<% if genre.is_valid == true %>
							<td>有効</td>
							<% else %>
							<td>無効</td>
							<% end %>
							<td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>