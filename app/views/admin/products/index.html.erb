<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-1"></div>
			<div class="col-md-10">
				<h2>商品一覧</h2>
				<%= link_to "新規作成", new_admin_product_path, class:"btn btn-primary" %>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @all_products.each do |product| %>
						<tr>
							<td><%= product.id %></td>
							<td>
								<%= link_to admin_product_path(product) do %>
								<%= product.name %>
								<% end %>
							</td>
							<td><%= product.price %></td>
							<td><%= product.genre.name %></td>
							<% if product.sales_status == true %>
							<td>販売中</td>
							<% else %>
							<td>販売停止中</td>
							<% end %>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-md-1"></div>
		</div>
	</div>
</div>