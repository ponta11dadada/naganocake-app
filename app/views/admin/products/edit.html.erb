<div class="body">
	<div class="container">
		<div class="row">
			<h2>商品編集</h2>
			<div class="col-md-6">
				<%= form_with model:@product, url:admin_product_path, local:true do |f| %>
					<%= f.label :商品名 %>
					<%= f.text_field :name %><br>

					<%= f.label :商品説明 %>
					<%= f.text_area :discription %><br>

					<%= f.label :ジャンル %>
					<%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "選択してください"}) %><br>

					<%= f.label :税抜価格 %>
					<%= f.text_field :price %><br>

					<%= f.label :販売ステータス %><br>
					<%= f.label :sales_status, "販売中", {value: true, style: "display: inline-block;"} %>
					<%= f.radio_button :sales_status, true, checked: true %>

					<%= f.label :sales_status, "販売停止中", {value: false, style: "display: inline-block;"} %>
					<%= f.radio_button :sales_status, false %><br>

					<%= f.label :商品画像 %>
					<%= f.attachment_field :image %><br>

					<%= f.submit "変更を保存", class:"btn btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</div>