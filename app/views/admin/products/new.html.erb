<div class="body">
	<div class="container">
		<div class="row">
			<h2>商品新規登録</h2>
			<div class="col-md-6">
				<%= form_with model:@new_product, url:admin_products_path, local:true do |f| %>
					<%= f.label :商品名 %>
					<%= f.text_field :name %><br>

					<%= f.label :商品説明 %>
					<%= f.text_area :discription %><br>

					<%= f.label :ジャンル %>
					<%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "選択してください"}) %><br>

					<%= f.label :税抜価格 %>
					<%= f.text_field :price %><br>

					<%= f.label :販売ステータス %><br>
					<%= f.radio_button :sales_status, :販売中, checked: true %>
					<%= f.label :sales_status, "販売中", {value: :販売中, style: "display: inline-block;"} %><br>
					<%= f.radio_button :sales_status, :販売停止中 %>
					<%= f.label :sales_status, "販売停止中", {value: :販売停止中, style: "display: inline-block;"} %><br>

					<%= f.label :商品画像 %>
					<%= f.attachment_field :image %><br>

					<%= f.submit "新規登録", class:"btn btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</div>