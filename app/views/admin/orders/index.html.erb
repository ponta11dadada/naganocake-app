<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-2"></div>
			<div class="col-xs-8">
				<h2>注文履歴一覧</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>購入日時</th>
							<th>購入者</th>
							<th>個数</th>
							<th>注文ステータス</th>
						</tr>
					</thead>
					<tbody>
					<% @all_orders.each do |order| %>
						<tr>
							<td>
								<%= link_to admin_order_path(order) do %>
								<%= order.created_at.strftime('%Y/%m/%d') %>
								<% end %>
							</td>
							<td>
								<%= order.customer.last_name %><%= order.customer.first_name %>
							</td>
							<td>
								<%= order.ordering_products.sum(:purchased_quantity) %>
							</td>
							<td>
								<%= order.order_status %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-2"></div>
		</div>
	</div>
</div>