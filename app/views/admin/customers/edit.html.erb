<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-2"></div>
			<div class="col-xs-8">
				<h2>
				<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
				</h2>
        <%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>

				  <div class="field">
            <%= f.label :last_name, "姓" %>
            <%= f.text_field :last_name %>
          </div>

          <div class="field">
            <%= f.label :first_name, "名" %>
            <%= f.text_field :first_name %>
          </div>

          <div class="field">
            <%= f.label :last_name_kana, "セイ" %>
            <%= f.text_field :last_name_kana %>
          </div>

          <div class="field">
            <%= f.label :first_name_kana, "メイ" %>
            <%= f.text_field :first_name_kana %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :postalcode, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postalcode %>
          </div>

          <div class="field">
            <%= f.label :members_address, "住所" %>
            <%= f.text_field :members_address %>
          </div>

          <div class="field">
            <%= f.label :phone_number, "電話番号" %>
            <%= f.text_field :phone_number %>
          </div>

          <div class="field">
            <%= f.radio_button :members_status, :true %>
            <%= f.label :members_status, "登録済み", {value: :true, style: "display: inline-block;"} %><br>
            <%= f.radio_button :members_status, :false %>
            <%= f.label :members_status, "退会済み", {value: :false, style: "display: inline-block;"} %><br>
          </div>

          <div class="action">
            <%= f.submit "変更を保存する", class:"btn btn-primary" %>
          </div>

          <% end %>
			</div>
			<div class="col-xs-2"></div>
		</div>
	</div>
</div>