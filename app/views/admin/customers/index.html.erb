<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-2"></div>
			<div class="col-xs-8">
				<h2>会員一覧</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>会員ID</th>
							<th>氏名</th>
							<th>メールアドレス</th>
							<th>会員ステータス</th>
						</tr>
					</thead>
					<tbody>
					<% @all_customers.each do |customer| %>
						<tr>
							<td><%= customer.id %></td>
							<td>
								<%= link_to admin_customer_path(customer) do %>
								<%= customer.last_name %><%= customer.first_name %>
								<% end %>
							</td>
							<td><%= customer.email %></td>
							<td>
								<% if customer.members_status == true %>
								<p>有効</p>
								<% else %>
								<p>無効</p>
								<% end %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-2"></div>
		</div>
	</div>
</div>