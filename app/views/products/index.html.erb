<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<h2>ジャンル検索</h2>
			</div>
			<div class="col-xs-9">
				<h2>商品一覧</h2>
				<% @all_products.each do |product| %>
					<div class="product-container">
						<%= link_to product_path(product) do %>
						<%= attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg' %>
						<% end %>
						<P><%= link_to product.name, product_path(product) %><br>
						<%= product.price %>円</p><br>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>