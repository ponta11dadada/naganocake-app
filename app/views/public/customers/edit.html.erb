<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h2>登録情報編集</h2>
				<%= form_with model:@customer, url:public_customer_path(@customer), local:true do |f| %>

		          <div class="field">
		            <%= f.label :last_name, "姓" %>
		            <%= f.text_field :last_name %>
		          </div>

		          <div class="field">
		            <%= f.label :first_name, "名" %>
		            <%= f.text_field :first_name %>
		          </div>

		          <div class="field">
		            <%= f.label :last_name_kana, "セイ" %>
		            <%= f.text_field :last_name_kana %>
		          </div>

		          <div class="field">
		            <%= f.label :first_name_kana, "メイ" %>
		            <%= f.text_field :first_name_kana %>
		          </div>

		          <div class="field">
		            <%= f.label :email, "メールアドレス" %>
		            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		          </div>

		          <div class="field">
		            <%= f.label :postalcode, "郵便番号(ハイフンなし)" %>
		            <%= f.text_field :postalcode %>
		          </div>

		          <div class="field">
		            <%= f.label :members_address, "住所" %>
		            <%= f.text_field :members_address %>
		          </div>

		          <div class="field">
		            <%= f.label :phone_number, "電話番号" %>
		            <%= f.text_field :phone_number %>
		          </div>

		          <div class="actions">
		            <%= f.submit "編集内容を保存する", class:"btn btn-primary" %>
		            <%= link_to "退会する", public_customers_withdraw_path, class:"btn btn-danger" %>
		          </div>
		        <% end %>
			</div>
		</div>
	</div>
</div>