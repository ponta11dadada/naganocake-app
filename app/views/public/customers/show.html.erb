<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-8">
				<h2>マイページ</h2>
				<p>登録情報</p>
				<%= link_to '編集する', edit_public_customer_path, class:'btn btn-primary' %><br>
				<table>
					<thead>
						<tr>
							<th>名前</th>
							<td><%= @customer.last_name %><%= @customer.first_name %></td>
						</tr>
						<tr>
							<th>カナ</th>
							<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= @customer.postalcode %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= @customer.members_address %></td>
						</tr>
						<tr>
							<th>電話番号</th>
							<td><%= @customer.phone_number %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= @customer.email %></td>
						</tr>
					</tbody>
				</table>
				<div>
					<%= link_to '配送先一覧', public_addresses_path, class:'btn btn-primary' %><br>
				</div>
				<div>
					<%= link_to '注文履歴一覧', public_orders_path, class:'btn btn-primary' %><br>
				</div>
			</div>
		</div>
	</div>
</div>