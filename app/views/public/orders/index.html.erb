<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-10">
				<h2>注文履歴一覧</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>注文日</th>
							<th>配送先</th>
							<th>注文商品</th>
							<th>支払金額</th>
							<th>ステータス</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody>
						<% @all_orders.each do |order| %>
						<tr>
							<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
							<td>
								<%= order.postalcode %><br>
								<%= order.address %><br>
								<%= order.addressee %><br>
							</td>
							<td><% order.ordering_products.each do |product| %>
								<%= product.product.name %><br>
								<% end %>
							</td>
							<td><%= order.total_fee %>円</td>
							<td><%= order.order_status %></td>
							<td><%= link_to "表示する", public_order_path(order), class:"btn btn-primary" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-1"></div>
		</div>
	</div>
</div>