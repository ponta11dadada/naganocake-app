<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-10">
				<h2>注文履歴詳細</h2>
				<div>
					<p>注文情報</p>
					<table border="1">
						<thead>
							<tr>
								<th>注文日</th>
								<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
							</tr>
							<tr>
								<th>配送先</th>
								<td>
									<%= @order.postalcode %><br>
									<%= @order.address %><br>
									<%= @order.addressee %><br>
								</td>
							</tr>
							<tr>
								<th>支払方法</th>
								<td><%= @order.payment_method %></td>
							</tr>
							<tr>
								<th>ステータス</th>
								<td><%= @order.order_status %></td>
							</tr>
						</tbody>
					</table>
				</div>
				<div>
					<p>注文内容</p>
					<table border="1">
						<thead>
							<tr>
								<th>商品</th>
								<th>単価(税込)</th>
								<th>個数</th>
								<th>小計</th>
							</tr>
						</thead>
						<tbody>
							<% @order.ordering_products.each do |product| %>
							<tr>
								<td><%= product.product.name %></td>
								<td><%= product.product.price %></td>
								<td><%= product.purchased_quantity %></td>
								<td><%= product.product.price.to_i * product.purchased_quantity.to_i %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div>
					<p>請求情報</p>
					<table border="1">
						<thead>
							<tr>
								<th>商品合計</th>
								<td><%= @total %></td>
							</tr>
							<tr>
								<th>配送料</th>
								<td><%= @order.freight %></td>
							</tr>
							<tr>
								<th>ご請求額</th>
								<td><%= @order.total_fee %></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			<div class="col-xs-1"></div>
		</div>
	</div>
</div>