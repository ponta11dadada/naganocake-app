<div class="body">
  <div class="container">
    <div class="row">
      <div class="top-message col-md-offset-3 col-md-6">
        <h2>新規会員登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :last_name, "姓" %>
            <%= f.text_field :last_name %>
          </div>

          <div class="field">
            <%= f.label :first_name, "名" %>
            <%= f.text_field :first_name %>
          </div>

          <div class="field">
            <%= f.label :last_name_kana, "セイ" %>
            <%= f.text_field :last_name_kana %>
          </div>

          <div class="field">
            <%= f.label :first_name_kana, "メイ" %>
            <%= f.text_field :first_name_kana %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :postalcode, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postalcode %>
          </div>

          <div class="field">
            <%= f.label :members_address, "住所" %>
            <%= f.text_field :members_address %>
          </div>

          <div class="field">
            <%= f.label :phone_number, "電話番号" %>
            <%= f.text_field :phone_number %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード(６文字以上)" %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <% f.hidden_field :members_status, value:true %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
        <% end %>

        <p>既に登録済みの方</p>
        <p>
        <%= link_to "こちら", new_customer_session_path %>からログインしてください
        </p>
      </div>
    </div>
  </div>
</div>



