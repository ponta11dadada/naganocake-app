<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-10">
				<h2>配送先編集</h2>
				<%= form_with model:@address, url:public_address_path, local:true do |f| %>
				<%= f.label :郵便番号 %>
				<%= f.text_field :registration_postalcode %><br>

				<%= f.label :住所 %>
				<%= f.text_field :registration_address %><br>

				<%= f.label :宛名 %>
				<%= f.text_field :address %><br>

				<%= f.submit "編集する", class:"btn btn-primary" %>
				<% end %>
			</div>
			<div class="col-xs-1"></div>
		</div>
	</div>
</div>