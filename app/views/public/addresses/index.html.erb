<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-10">
				<h2>配送先登録/一覧</h2>
				<%= form_with model:@new_address, url:public_addresses_path, local:true do |f| %>
				<%= f.label :郵便番号 %>
				<%= f.text_field :registration_postalcode %><br>

				<%= f.label :住所 %>
				<%= f.text_field :registration_address %><br>

				<%= f.label :宛名 %>
				<%= f.text_field :address %><br>

				<%= f.submit "登録する", class:"btn btn-success" %>
				<% end %>

				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>郵便番号</th>
							<th>住所</th>
							<th>宛名</th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @all_addresses.each do |address| %>
						<tr>
							<td><%= address.registration_postalcode %></td>
							<td><%= address.registration_address %></td>
							<td><%= address.address %></td>
							<td>
								<%= link_to "編集する", edit_public_address_path(address), class:"btn btn-primary" %>
							</td>
							<td>
								<%= button_to "削除する", public_address_path(address), class:"btn btn-danger", method: :delete %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-1"></div>
		</div>
	</div>
</div>